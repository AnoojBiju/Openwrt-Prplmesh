{
    "version": "2.0.0",
    "type": "process",
    "presentation" : { "echo": true, },
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "Configure",
            "command": "python",
            "args": ["maptools.py", "-m", "${workspaceRoot}/..", "config", "--gui", "-g"],
            "options": {
                "cwd": "${workspaceRoot}/",
                "env": {
                        "PYTHONPATH" : "/opt/ugw/chdlab"
                }
            },
            "problemMatcher":"$tsc"
        },

        {
            "label": "Klocwork",
            "command": "./kw.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/klocwork/",
            },
            "presentation": {
                "focus": true
            },
            "problemMatcher": []
        },

    ]
}
