{
    "version": "2.0.0",
    "type": "process",
    "presentation" : { "echo": true, },
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "Configure",
            "command": "python",
            "args": ["maptools.py", "-m", "${workspaceRoot}/..", "config", "--gui", "-g"],
            "options": {
                "cwd": "${workspaceRoot}/",
                "env": {
                        "PYTHONPATH" : "/opt/ugw/chdlab"
                }
            },
            "problemMatcher":"$tsc"
        },
        {
            "label": "BuildAll",
            "command": "python",
            "args": ["./maptools.py", "build", "all"],
            "options": {
                "cwd": "${workspaceRoot}/",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "DeployAll",
            "command": "python",
            "args": ["./maptools.py", "deploy", "all"],
            "options": {
                "cwd": "${workspaceRoot}/",
            },
            "problemMatcher":"$tsc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "CleanAll",
            "command": "python",
            "args": ["./maptools.py", "build", "all", "-c", "clean"],
            "options": {
                "cwd": "${workspaceRoot}/",
            },
            "problemMatcher":"$tsc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Distclean",
            "command": "python",
            "args": ["./maptools.py", "build", "all", "-c", "distclean"],
            "options": {
                "cwd": "${workspaceRoot}/",
            },
            "problemMatcher":"$tsc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Klocwork",
            "command": "./kw.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/klocwork/",
            },
            "presentation": {
                "focus": true
            },
            "problemMatcher": []
        },

    ]
}
