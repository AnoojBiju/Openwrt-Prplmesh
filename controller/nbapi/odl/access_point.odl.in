%define {
    select @CONTROLLER_ROOT_DM@.Network.AccessPoint {
        string SSID = "prplMesh";
        object Security {
            string PreSharedKey;
            string KeyPassphrase;
            string SAEPassphrase;

            string ModeEnabled {
                default "None";
                on action validate call check_enum [
                    "None",
                    "WPA2-Personal",
                    "WPA3-Personal",
                    "WPA3-Personal-Transition"
                ];
            }
        }
        string MultiApMode {
            default "Fronthaul";
            on action validate call check_enum [
                "Fronthaul",
                "Backhaul",
                "Fronthaul+Backhaul"
            ];
        }
        bool Band2_4G = false;
        bool Band5GL = false;
        bool Band5GH = false;
        bool Band6G = false;

        /*
        ** Name of the group this set of accesspoints belong to.
        */
        %read-only string X-PRPL_ORG_GroupName = "";
        /*
        ** Enabling/Disabling the AcceessPoint set.
        */
        bool Enable = true;

    }
}
